<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppHotelFinal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppHotelFinal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <!-- Navbar / Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm mb-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">
                    HotelOnline
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"] as string) == "Home Page" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link @((ViewData["Title"] as string) == "Налични стаи" ? "active" : "")"
                                   asp-controller="Rooms" asp-action="Index">
                                    Стаи
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @((ViewData["Title"] as string) == "Направени резервации" ? "active" : "")"
                                   asp-controller="Reservations" asp-action="Index">
                                    Резервации
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @((ViewData["Title"] as string) == "Clients" ? "active" : "")"
                                   asp-controller="Clients" asp-action="Index">
                                    Клиенти
                                </a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content placeholder -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2026 - WebAppHotelFinal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <style>
        /* Navbar link hover effect */
        .navbar-nav .nav-link {
            transition: color 0.3s ease-in-out;
            color: #fff; /* default color */
        }

            .navbar-nav .nav-link:hover {
                color: #ffd700 !important; /* golden hover */
            }

            .navbar-nav .nav-link.active {
                font-weight: bold;
                border-bottom: 2px solid #ffd700; /* highlight active page */
            }

    </style>
</body>
</html>
