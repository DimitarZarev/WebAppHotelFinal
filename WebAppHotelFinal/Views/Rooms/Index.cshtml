@model IEnumerable<WebAppHotelFinal.Models.Room>

@{
    ViewData["Title"] = "Налични стаи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Налични стаи</h2>

    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary mb-3">
            ➕ Add Room
        </a>
    }

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title">
                            Room @item.NumberRoom
                        </h5>

                        <p class="card-text">
                            <strong>Type:</strong> @item.RoomType <br />
                            <strong>Capacity:</strong> @item.Capacity <br />
                            <strong>Price:</strong> @item.Price €
                        </p>

                        <a asp-action="Details"
                           asp-route-id="@item.Id"
                           class="btn btn-outline-primary btn-sm">
                            Details
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-outline-warning btn-sm">
                                Edit
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@item.Id"
                               class="btn btn-outline-danger btn-sm">
                                Delete
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
